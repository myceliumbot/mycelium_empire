function infectNearbyObjects(cloud) {
  // Placeholder: Logs, plants, humans (later)
  // Copilot: Add interaction with terrain/structures here
}

// === START GAME ===
document.addEventListener("DOMContentLoaded", () => {
  gameLoop();
  console.log("Mycelium Empire started");
});

