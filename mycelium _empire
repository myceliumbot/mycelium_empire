// === GLOBAL STATE ===
let spores = 0;
let energy = 100;
let evolutionLevel = 0;
let baseFungus = { x: 250, y: 250 };
let sporeClouds = [];
let enemies = [];

// === MAIN GAME LOOP ===
function gameLoop() {
  updateSporeGrowth();
  updateEnemies();
  checkEvolution();
  renderHUD();
  requestAnimationFrame(gameLoop);
}

// === PLAYER INTERACTION ===
canvas.addEventListener("click", function (e) {
  if (energy >= 5) {
    spores += 1;
    energy -= 5;
    spawnSporeCloud(e.x, e.y);
  }
});

// === GROWTH MECHANIC ===
function updateSporeGrowth() {
  sporeClouds.forEach((cloud, i) => {
    cloud.radius += 1;
    if (cloud.radius > 100) sporeClouds.splice(i, 1);
    infectNearbyObjects(cloud);
  });
}

function spawnSporeCloud(x, y) {
  sporeClouds.push({ x, y, radius: 10 });
  console.log("Spore cloud released at", x, y);
}

// === EVOLUTION LOGIC ===
function checkEvolution() {
  if (spores >= 10 && evolutionLevel === 0) {
    evolutionLevel = 1;
    console.log("Unlocked: Spore Multiplier!");
  }
  // TODO: Add more evolution tiers
}

// === ENEMY PLACEHOLDER ===
function updateEnemies() {
  enemies.forEach((enemy) => {
    enemy.x += (baseFungus.x - enemy.x) * 0.01;
    enemy.y += (baseFungus.y - enemy.y) * 0.01;
  });
}

// === RENDER HUD ===
function renderHUD() {
  hud.innerHTML = `
    <div>ðŸŒ± Spores: ${spores}</div>
    <div>âš¡ Energy: ${energy}</div>
    <div>ðŸ§¬ Evolution: ${evolutionLevel}</div>
  `;
}

